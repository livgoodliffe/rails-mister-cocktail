<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> | <%= dose.ingredient.name %> |


      <%= link_to dose_path(dose), :method => :delete do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>





      </li>
  <% end %>
</ul>

<%= render 'dose/new', cocktail: @cocktail %>
