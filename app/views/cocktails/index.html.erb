<header class="masthead text-center" id="cocktail-header">
  <div class="container">
    <h1 class="mb-0">Misss Cocktail</h1>
    <br>
    <h2 class="font-weight-light mb-0">Create your own recipe library</h2>
  </div>
</header>

<br>

<div class="container">

  <div class="card-deck">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card cocktail-card">
          <%= cl_image_tag cocktail.photo, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <br>

  <div class="text-center">
    <%= link_to "Add cocktail", new_cocktail_path, class: "btn button" %>
  </div>

</div>
